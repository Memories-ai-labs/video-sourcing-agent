# Google API Key (required for Gemini)
GOOGLE_API_KEY=your_google_api_key

# YouTube Data API Key (required for YouTube search)
YOUTUBE_API_KEY=your_youtube_data_api_key

# Memories.ai v2 API Key (required for metadata/transcript/VLM tools)
MEMORIES_API_KEY=your_memories_ai_api_key

# Memories.ai v2 optional configuration
MEMORIES_BASE_URL=https://mavi-backend.memories.ai/serve/api/v2
MEMORIES_DEFAULT_CHANNEL=memories.ai
MEMORIES_VLM_MODEL=gemini:gemini-3-flash-preview

# Exa.ai API Key (for neural web search)
# Sign up at https://exa.ai to get an API key
EXA_API_KEY=your_exa_api_key

# Apify API Token (for TikTok, Instagram, Twitter scraping)
# Sign up at https://apify.com to get an API token
# Apify provides professional-grade scraping with anti-bot handling and proxies
APIFY_API_TOKEN=your_apify_api_token

# Optional: Model configuration
GEMINI_MODEL=gemini-3-flash-preview
MAX_AGENT_STEPS=10

# Optional: API timeout (in seconds)
API_TIMEOUT_SECONDS=30

# ===========================================
# Web API Server Configuration
# ===========================================

# API Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Authentication (comma-separated list of valid API keys)
# Leave empty to disable authentication (dev mode)
API_KEYS=
API_KEY_HEADER=X-API-Key

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=*

# SSE streaming keep-alive ping interval (seconds)
SSE_PING_INTERVAL=15
